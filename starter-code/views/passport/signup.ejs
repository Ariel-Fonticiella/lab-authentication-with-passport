<h2> Sign Up </h2>

<% if (typeof errorMessage !== "undefined") { %>
  <p class="error-message"> <%= errorMessage %> </p>
<% } %>

<div>
<form id="form" method="post" action="/process-signup">
  <label for="full-name-input"> Full Name </label>
  <input id="full-name-input" type="text" placeholder="e.g. Jon Snow"
        name="signupFullName" />
  <br />
  <br />
  <label for="email-input"> Email </label>
  <input id="email-input" type="email" placeholder="e.g. JonSnow@Stark.Winterfell"
        name="signupEmail" />
  <br />
  <br />

  <label for="password-input"> Password </label>
  <input id="password-input" type="password" placeholder="e.g. YouKnowNothing247!"
        name="signupPassword" />
  <br />
  <br />

  <button> Sign Up </button>
</form>
</div>
<p>
  <b>Already have an account?</b>
  <a href="/login"> Log In! </a>
</p>
